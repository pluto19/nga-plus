{
  "manifest_version": 3,
  "name": "NGA-Plus",
  "version": "1.0",
  "description": "在新标签页打开NGA论坛的帖子链接",
  "icons": {
    "16": "icons/icon16.ico",
    "48": "icons/icon48.ico",
    "128": "icons/icon128.ico"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.ico",
      "48": "icons/icon48.ico",
      "128": "icons/icon128.ico"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://bbs.nga.cn/*", "*://*.nga.cn/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": []
}